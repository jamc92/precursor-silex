{% extends 'layouts/backend.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    <!-- page script -->
    <script type="text/javascript">
        $(function() {
            $("#comentario_list").dataTable();
        });

        function confirm_delete(){
            if(!confirm("Esta seguro que desea eliminar el comentario? \n Esta acción no se podrá deshacer.")) {
                return false;
            }
        }

    </script>
{% endblock %}

{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'comentarios_articulo_list'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Lista de Comentarios
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="row">
                    <div class="col-xs-12">

                        {% include 'ag_alerts.html.twig' %}

                        <div class="box">
                            <div class="box-header">
                                
                            </div><!-- /.box-header -->

                            <div class="box-body table-responsive">
                                <a class="btn btn-primary" href="{{ path('comentario_create') }}">Crear Comentario</a><br /><br />
                                <table id="comentario_list" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Artículo</th>
                                            <th>Autor</th>
                                            <th>Contenido</th>
                                            <th>Fecha</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for comentario in comentarios %}
                                            <tr>
                                                <td>{{ comentario.articulo }}</td>
                                                <td>{{ comentario.usuario }}</td>
                                                <td>{{ comentario.contenido }}</td>
                                                <td>{{ comentario.fecha }}</td>
                                                <td>
                                                    <a href="{{ path('comentario_delete', { id: comentario.id }) }}" onclick='return confirm_delete();' class="btn btn-danger btn-xs">Eliminar</a>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Artículo</th>
                                            <th>Autor</th>
                                            <th>Contenido</th>
                                            <th>Fecha</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
