{% extends 'layouts/backend.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    <!-- page script -->
    <script type="text/javascript">
        $(function() {
            $("#articulo_list").dataTable();
        });

        function confirm_delete(){
            if(!confirm("¿Está seguro que desea eliminar el artículo? \n ¡Esta acción no se podrá deshacer!")) {
                return false;
            }
        }

    </script>
{% endblock %}

{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'articulo_list'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Lista de Artículos
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="row">
                    <div class="col-xs-12">

                        {% include 'ag_alerts.html.twig' %}

                        <div class="box">
                            <div class="box-header">
                                
                            </div><!-- /.box-header -->

                            <div class="box-body table-responsive">
                                <a class="btn btn-primary" href="{{ path('articulo_create') }}">Crear Artículo</a><br /><br />
                                <table id="articulo_list" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Categoría</th>
                                            <th>Título</th>
                                            <th>Fecha Pub.</th>
                                            <th>Comentarios</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for articulo in articulos %}
                                            <tr>
                                                <td>{{ articulo.categoria }}</td>
                                                <td>{{ articulo.titulo }}</td>
                                                <td>{{ articulo.fecha_pub }}</td>
                                                <td>
                                                    <a href="{{ path('comentarios_articulo_list', { articulo_id: articulo.id }) }}" class="btn btn-info btn-xs">
                                                        {{ articulo.comentarios|length }} Comentarios
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="{{ path('etiquetas_articulo_list', { articulo_id: articulo.id }) }}" class="btn btn-success btn-xs">Etiquetas</a>
                                                    <a href="{{ path('articulo_edit', { id: articulo.id }) }}" class="btn btn-primary btn-xs">Editar</a>
                                                    <a href="{{ path('articulo_delete', { id: articulo.id }) }}" onclick='return confirm_delete();' class="btn btn-danger btn-xs">Eliminar</a>
                                                </td>
                                            </tr>
                                        {% endfor %}                                        

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Categoría</th>
                                            <th>Título</th>
                                            <th>Fecha Pub.</th>
                                            <th>Comentarios</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
